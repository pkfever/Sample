    <TextView
        android:id="@+id/interchange_text"
        android:layout_width="@dimen/view_0dp"
        android:layout_height="@dimen/view_50dp"
        android:layout_marginStart="@dimen/view_16dp"
        android:layout_marginTop="@dimen/view_12dp"
        android:layout_marginEnd="16sp"
        android:backgroundTint="@color/white"
        android:gravity="left|center"
        android:paddingStart="@dimen/view_10dp"
        android:text="Select Interchange"
        app:boxStrokeWidth="@dimen/view_0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_16dp"
        android:layout_marginTop="@dimen/view_12dp"
        android:layout_marginEnd="@dimen/view_16dp"
        android:backgroundTint="@color/white"
        android:hint="Number-plate"
        android:paddingStart="@dimen/view_16dp"
        android:paddingTop="@dimen/view_12dp"
        android:paddingBottom="@dimen/view_12dp"
        app:layout_constraintTop_toBottomOf="@id/interchange_text" />

    <TextView
        android:id="@+id/btn_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_16dp"
        android:layout_marginTop="@dimen/view_12dp"
        android:layout_marginEnd="@dimen/view_16dp"
        android:paddingStart="@dimen/view_16dp"
        android:paddingTop="@dimen/view_12dp"
        android:paddingBottom="@dimen/view_12dp"
        android:text="Date Time"
        app:layout_constraintTop_toBottomOf="@id/edt_name"></TextView>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_16dp"
        android:layout_marginTop="@dimen/view_12dp"
        android:layout_marginEnd="@dimen/view_16dp"
        android:paddingStart="@dimen/view_16dp"
        android:paddingTop="@dimen/view_12dp"
        android:paddingBottom="@dimen/view_12dp"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/btn_date"></Button>

